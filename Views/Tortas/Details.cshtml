@model Doceria.Models.Torta



<div class="d-flex flex-row gap-3 align-items-center">
    <a asp-action="Index">
        <i class="bi bi-arrow-left-circle" style="font-size: 2.2rem; color: black;"></i>
    </a>
    <h1>Visualizar Dados</h1>
</div>

<hr />
<h3 class="mb-3">Torta</h3>
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsVegana)
        </dt>
        <dd class="col-sm-10">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" disabled @(Model.IsVegana ? "checked" : "") />
                <label class="form-check-label"></label>
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TordaId" class="btn btn-outline-info p-2" style="width: 7rem;">
        <i class="bi bi-pencil-square me-1"></i>
        Editar
    </a>
</div>
<div class="d-flex justify-content-end" style="margin-top: 10rem;">
    <button onclick="idTorta.value = @Model.TordaId" type="button" class="btn btn-danger p-2" style="width: 8rem;" data-bs-toggle="modal" data-bs-target="#ExcluirModal">
        <i class="bi bi-trash me-1"></i>
        Excluir
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="ExcluirModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="ExcluirModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ExcluirModalLabel">Confirmação</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5>Deseja realmente excluir o item?</h5>
                <p class="fs-6">Esta ação não pode ser revertida e todos os dados de cadastro serão perdidos.</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" name="id" id="idTorta" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>
